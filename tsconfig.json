{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./Types"],    
    "target": "es2016",                                  
    /* Modules */
    "module": "commonjs",                                
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    // "preserveSymlinks": true,                         
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                     
    "skipLibCheck": true                                 
  }
}